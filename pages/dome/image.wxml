<view class="page">
  <view class="page__hd">
    <text class="page__title">image</text>
    <text class="page__desc">图片</text>
     <image  style="width: 200px; height: 200px; background-color: #eeeeee;" src='https://mp.weixin.qq.com/debug/wxadoc/dev/image/cat/0.jpg?t=2018227'></image>
  </view>
  <view class="page__bd">
    <view class="section section_gap" wx:for="{{array}}" wx:for-item="item">
